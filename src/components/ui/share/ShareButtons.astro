---
interface Props {
  title: string;
  url: string;
}
const { title, url } = Astro.props as Props;

// LinkedIn: comparte el enlace del post
const liUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;

// GitHub: apunta a tu perfil (puedes cambiarlo a un repo concreto si quieres)
const ghUrl = `https://github.com/minivillalba4`;
---

<style>
  .share {
    display: flex;
    gap: .5rem;
    align-items: center;
    margin: .5rem 0 1rem;
  }
  .chip {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 6px;
    box-shadow: var(--box-shadow);
    background: transparent;
    color: var(--accent);
    border: 1px solid var(--accent);
    transition: opacity .15s ease;
  }
  .chip:hover { opacity:.9 }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>

<div class="share">
  <!-- LinkedIn -->
  <a href={liUrl} target="_blank" rel="noopener noreferrer" class="chip" aria-label="Compartir en LinkedIn" title="Compartir en LinkedIn">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" aria-hidden="true">
      <path fill="currentColor" d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.5 8h4V24h-4V8zM8.5 8h3.8v2.2h.05c.53-1 1.82-2.2 3.75-2.2 4 0 4.9 2.6 4.9 6v10h-4v-8.9c0-2.1 0-4.8-3-4.8s-3.4 2.3-3.4 4.7V24h-4V8z"/>
    </svg>
    <span class="sr-only">LinkedIn</span>
  </a>

  <!-- GitHub -->
  <a href={ghUrl} target="_blank" rel="noopener noreferrer" class="chip" aria-label="GitHub" title="GitHub">
    <svg viewBox="0 0 16 16" width="16" height="16" aria-hidden="true">
      <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
    </svg>
    <span class="sr-only">GitHub</span>
  </a>
</div>


