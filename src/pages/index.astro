---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/sections/Footer.astro';
import Header from '../components/sections/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import HeroSection from '../components/sections/HeroSection.astro';
import SkillsSection from '../components/sections/SkillsSection.astro';
import { skills } from '../data/skills';
import WorkExperience from '../components/sections/WorkExperience.astro';
import { work } from '../data/work';
import Studies from '../components/sections/Studies.astro';
import { studies } from '../data/studies';
import Carousel from '../components/ui/carousel/Carousel.astro';
import { logos } from '../data/logos';
import ArrowSeparator from '../components/ui/separator/ArrowSeparator.astro'
import GlowLineSeparator from '../components/ui/separator/GlowLineSeparator.astro'

// Logos
import astroLogo from '../assets/logos/Astro-logo.svg';
import googleAdsLogo from '../assets/logos/GoogleAds-logo.svg';
import posthogLogo from '../assets/logos/posthog-logo.svg';
import notionLogo from '../assets/logos/Notion-logo.svg';
import figmaLogo from '../assets/logos/Figma-logo.svg';

// skills are imported from src/data/skills
---

<!doctype html>
<html lang="en" data-theme="dark" class="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <!-- JSON-LD: Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'Ismael Villalba',
      url: new URL('/', Astro.site).toString(),
      logo: new URL('/favicon.svg', Astro.site).toString(),
      sameAs: [
        'https://github.com/minivillalba4',
        'https://www.linkedin.com/in/ismael-villalba-serrano-209440229/',
      ],
    })} />
	</head>
	<body>
		<Header />
		<main>
     {/* <HeroSection
        title="Data Science en ESIC University"
        subtitle="Proyectos de Ciencia de Datos aplicados a negocio."
        showCTA
        primaryCTA={{ text: 'Ver Proyectos', href: '/portfolio' }}
      /> */}
     

    <section class="py-6">
      <ArrowSeparator />
      <SkillsSection title="Habilidades Técnicas" skills={skills} />   
      <ArrowSeparator />
      <WorkExperience title="Experiencia Profesional" items={work} />
      <ArrowSeparator />
      <Studies title="Formación Académica" items={studies} />
      <GlowLineSeparator />
    </section>
		</main>
		<Footer />
	</body>
</html>
